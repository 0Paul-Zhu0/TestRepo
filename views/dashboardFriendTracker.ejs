<div>
    <h2>Friends List and Tracker</h2>
    <form action="/dashboard" method="POST" class="friend-added">
        <input type="text" name="name" id="name">
        <button type="submit">submit</button>
    </form>
</div>

<div>
    <ul>
        <% friendsList.forEach(details=> { %>
            <li>
                <%= details.name %> <span>||</span>
                    <%= details.hours %>

                        <span>
                            <form action="/minusHour" method="POST">
                                <input type="hidden" name="friendId" id="friendId"
                                    value="<%= details._id %>">
                                <input type="hidden" name="friendHour" id="friendHour"
                                    value="<%= details.hours %>">
                                <button type="submit">
                                    <span>-</span>
                                </button>
                            </form>
                        </span>


                        <span>
                            <form action="/increaseHour" method="POST">
                                <input type="hidden" name="friendId" id="friendId"
                                    value="<%= details._id %>">
                                <input type="hidden" name="friendHour" id="friendHour"
                                    value="<%= details.hours %>">
                                <button type="submit">
                                    <span>+</span>
                                </button>
                            </form>
                        </span>

                        <span>
                            <form action="/deleteFriend" method="POST">
                                <input type="hidden" name="friendId" id="friendId"
                                    value="<%= details._id %>">
                                <button type="submit">
                                    <span>DEL</span>
                                </button>
                            </form>
                        </span>
            </li>
            <% }) %>
    </ul>

</div>